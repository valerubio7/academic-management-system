# =================================================================
# DJANGO CORE SETTINGS
# =================================================================

# REQUIRED: Generate a unique secret key for production
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY='change-me-super-secret-key-REQUIRED'

# Set to 'False' in production (CRITICAL!)
# When False, uses PostgreSQL; when True, uses SQLite
DEBUG='True'

# Comma-separated list of allowed domains (REQUIRED in production)
# Example for production: 'example.com,www.example.com'
# Example for local: '0.0.0.0,localhost,127.0.0.1'
ALLOWED_HOSTS='0.0.0.0,localhost,127.0.0.1'

# =================================================================
# DATABASE SETTINGS (PostgreSQL - used when DEBUG=False)
# =================================================================
# Docker Compose uses POSTGRES_* variables.
# Railway injects PG* variables automatically from its PostgreSQL service.
# The app checks PG* first, then falls back to POSTGRES_* / DATABASE_*.

# PostgreSQL database name
POSTGRES_DB='AMSdatabase'

# PostgreSQL username
POSTGRES_USER='admin'

# PostgreSQL password (CHANGE THIS in production!)
POSTGRES_PASSWORD='admin'

# Database host (use 'db' for docker-compose service, or 'localhost' for local PostgreSQL)
DATABASE_HOST='db'

# Database port (default PostgreSQL port)
DATABASE_PORT='5432'

# Railway PostgreSQL variables (set automatically by Railway â€” no need to configure manually)
# PGDATABASE, PGUSER, PGPASSWORD, PGHOST, PGPORT

# =================================================================
# SECURITY SETTINGS (Production only - used when DEBUG=False)
# =================================================================

# Comma-separated list of trusted origins for CSRF protection
# Example: 'https://example.com,https://www.example.com'
CSRF_TRUSTED_ORIGINS=''

# =================================================================
# EMAIL CONFIGURATION (Optional)
# =================================================================

# Email backend (leave commented for defaults)
# Development default: django.core.mail.backends.console.EmailBackend
# Production default: django.core.mail.backends.smtp.EmailBackend
# EMAIL_BACKEND='django.core.mail.backends.smtp.EmailBackend'

# SMTP server configuration
EMAIL_HOST='smtp.gmail.com'
EMAIL_PORT='587'
EMAIL_USE_TLS='True'

# SMTP credentials (required for sending emails)
EMAIL_HOST_USER=''
EMAIL_HOST_PASSWORD=''

# Default 'from' email address
DEFAULT_FROM_EMAIL='noreply@example.com'
